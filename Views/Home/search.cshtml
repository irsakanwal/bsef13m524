@model List<BooksGallery.Models.product>

<!---->
<!-- products -->
<div class="products">
    <div class="container">
        <div class="products-grids">
            <div class="col-md-12 products-grid-left">
                <h2 style="color:red ; margin-bottom:30px "><img src="~/Image/icon1.png" style="height:100px ; width:100px" alt="" />Our collections</h2>
                @foreach (var item in Model)
                {
                    <div class="products-grid-lft">


                        <div class="products-grd">
                            <div class="p-one simpleCart_shelfItem prd" id="prod">
                                <a href="single.html">
                                    <img src="~/Image/@item.photo" alt=" " class="img-responsive" style="height:200px ; width:180px" />
                                    <div class="mask">
                                        <span>Quick View</span>
                                    </div>
                                </a>
                                <h4>@item.name</h4>
                                <p><a class="item_add" href="#"><i></i> <span class="item_price valsa">@item.price</span></a></p>
                                <div class="pro-grd">
                                    @Html.ActionLink("Click Here", "single", new { code = item.code })
                                </div>
                            </div>
                        </div>









                    </div>
                }

            </div>


        </div>
    </div>
    <div class="clearfix"></div>
</div>

<!-- //products -->
