@model List<BooksGallery.Models.cart>
@{
    ViewBag.Title = "viewCart";
}

<!-- products -->
<div class="products">
    <div class="container">
        <div class="products-grids">
            <div class="col-md-12 products-grid-left">
                @{ int price = 0;
                    int items = 0;
                    foreach (var v in Model)
                    {
                        price += v.bPrice;
                        items += 1;
                    }
                    
                    <div class="cart box_1">
                        <a href="checkout">
                            <h3>
                                <div class="total">
                                    
                                    <span class="">RS.@price</span> (<span id="" class="">@items</span> items)
                                </div>
                                <img src="~/Image/cart1.png" alt="" />
                            </h3>
                        </a>
                        <p><a href="javascript:;" class="simpleCart_empty" style="color:rebeccapurple">price =@Session["price"]</a></p>
                        <div class="clearfix"> </div>
                    </div>
                    <h2 style="color:red ; margin-bottom:30px"><img src="~/Image/icon1.png" style="height:100px ; width:100px" alt="" />Your collections</h2>
                    <div class="clearfix"> </div>
                    foreach (var item in Model)
                    {
                    <div class="products-grid-lft">


                        <div class="products-grd">
                            <div class="p-one simpleCart_shelfItem prd">
                                <a href="single.html">
                                    <img src="~/Image/@item.bPhoto" alt=" " class="img-responsive" style="height:200px ; width:180px" />
                                    <div class="mask">
                                        <span>Quick View</span>
                                    </div>
                                </a>
                                <h4>@item.bName</h4>
                                <p><a class="item_add" href="#"><i></i> <span class="item_price valsa">@item.bPrice</span></a></p>
                                
                            </div>
                        </div>

                    </div>
                        }
                    }

            </div>


        </div>
    </div>
    <div class="clearfix"></div>
</div>

<!-- //products -->
